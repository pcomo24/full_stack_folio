            console.log(`hash: ${hash}`);
            const needsInitialScroll = document.getElementById(hash.substr(1)) != null;
            console.log(`needsInit: ${needsInitialScroll}`);
            //if no window location set new location to poster that loads page at #poster
            if (!needsInitialScroll) {
                window.location.hash = "poster";
                hash = window.location.hash;
            }
            //after full page load scroll page to #home, if statement to prevent pulling up on refresh of other divs
            if (window.location.hash === "#poster") {
                window.addEventListener("load", () => {
                    hash = '#home';
                    setTimeout(() => {
                        sweetScroll.to(hash);
                    }, 3750);
                }, false);
            }
